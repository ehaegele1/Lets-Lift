      .dropbtn{
        background-color: gold;
        color: black;
        padding: 16px;
        font-size: 30px;
        border: none;
        font-family: 'Germania One', cursive;
      }

      .dropdown{
        position: relative;
        display: inline-block;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        background-color: gold;
        border-color: black;
        min-width: 160px;

      }
      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        font-family: 'Germania One', cursive;
      }
      .dropdown-content a:hover {
        background-color: blue;
      }

      .dropdown:hover .dropdown-content {
        display: block;
      }
      .dropdown:hover .dropbtn {
        background-color: blue;
      }
      ul{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        list-style:none;
      }

      .createbtn{
        background-color: gold;
        display: inline-block;
        position: relative;
        border: none;
        font-size: 30px;
        color: black;
        padding: 16px;
